<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    >
    <RelativeLayout
        android:id="@+id/r11"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        >
        <TextView
            android:id="@+id/order_username"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/user_phonenumber"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="phonenumber"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:layout_marginRight="13dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/order_price_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="Total price"

            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@+id/product_quantity"
            android:layout_marginLeft="55dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/order_shipping_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Address"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@+id/order_datetime_layout"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/order_datetime_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date Time"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@+id/order_price_layout"
            android:layout_marginLeft="55dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            />
        <Button
            android:id="@+id/click_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_shipping_address"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/darker_gray"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:text="show placed orders"
            >
        </Button>
    </RelativeLayout>
</androidx.cardview.widget.CardView>