<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".seller.selleractivity">
    <ImageView
        android:id="@+id/seller_login"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/sellerlogin"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/seller_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seller Registration Form"
        android:gravity="center"
        android:layout_below="@+id/seller_login"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="20dp"

        />
    <EditText
        android:id="@+id/seller_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name...."
        android:layout_below="@+id/seller_title"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:inputType="text"
        android:background="@drawable/inputs"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/seller_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone...."
        android:layout_below="@+id/seller_name"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:inputType="text"
        android:background="@drawable/inputs"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/seller_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email...."
        android:layout_below="@+id/seller_phone"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:inputType="text"
        android:background="@drawable/inputs"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/seller_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password...."
        android:layout_below="@+id/seller_email"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:inputType="text"
        android:background="@drawable/inputs"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        />
    <EditText
    android:id="@+id/seller_address"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Address...."
    android:layout_below="@+id/seller_password"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:textStyle="bold"
    android:inputType="text"
    android:background="@drawable/inputs"
    android:layout_marginTop="10dp"
    android:padding="10dp"
    />
    <Button
    android:id="@+id/seller_submit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@android:color/holo_blue_dark"
    android:text="SUBMIT"
    android:textColor="@android:color/white"
    android:layout_below="@id/seller_address"
    android:layout_marginTop="10dp"
    />
    <Button
        android:id="@+id/seller_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/holo_blue_dark"
        android:text="LOGIN"
        android:textColor="@android:color/white"
        android:layout_below="@id/seller_submit"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>