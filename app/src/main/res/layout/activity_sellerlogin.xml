<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".seller.sellerlogin">
    <ImageView
        android:id="@+id/seller_member"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/seller"
        android:scaleType="centerCrop"
        />
    <EditText
        android:id="@+id/seller_email_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email...."
        android:layout_below="@+id/seller_member"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:inputType="text"
        android:background="@drawable/inputs"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/seller_password_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password...."
        android:layout_below="@+id/seller_email_login"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:inputType="text"
        android:background="@drawable/inputs"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        />
    <Button
        android:id="@+id/seller_submit_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/holo_blue_dark"
        android:text="ENTER"
        android:textColor="@android:color/white"
        android:layout_below="@id/seller_password_login"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>