<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    app:cardElevation="10dp"
    android:layout_marginRight="10dp"
    tools:context=".maintainanace_activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/product_maintain_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            />
        <EditText
            android:id="@+id/product_maintain_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_maintain_image"
            android:layout_margin="5dp"
            android:hint="product name"
            android:background="@drawable/inputs"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="18sp">

        </EditText>
        <EditText
            android:id="@+id/product_maintain_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="product price"
            android:layout_below="@+id/product_maintain_name"
            android:textColor="@color/colorPrimaryDark"
            android:layout_margin="5dp"
            android:background="@drawable/inputs"
            android:textAlignment="center"
            android:padding="12dp"
            android:textStyle="bold"
            android:textSize="18dp"
            />
        <EditText
            android:id="@+id/product_maintain_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_maintain_price"
            android:hint="description"
            android:background="@drawable/inputs"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center"
            android:padding="12dp"
            android:textStyle="bold"
            android:textSize="18sp"
            />
      <Button
          android:id="@+id/maintain_changes_button"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="make changes"
          android:background="@drawable/buttons"
          android:layout_below="@id/product_maintain_desc"
            >

      </Button>

        <Button
            android:id="@+id/delete_product_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete product"
            android:background="@drawable/buttons"
            android:layout_margin="20dp"
            android:layout_below="@id/maintain_changes_button"
            >

        </Button>



    </RelativeLayout>

</androidx.cardview.widget.CardView>